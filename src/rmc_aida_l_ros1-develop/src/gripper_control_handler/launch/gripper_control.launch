<?xml version="1.0"?>
<launch>
    <!-- 夹爪控制Action服务器启动文件 -->
    
    <!-- 参数配置 -->
    <param name="gripper_control/left_gripper_ip" value="169.254.128.18" />
    <param name="gripper_control/right_gripper_ip" value="169.254.128.19" />
    <param name="gripper_control/gripper_port" value="8080" />
    <param name="gripper_control/communication_timeout" value="10.0" />
    
    <!-- 启动夹爪控制Action服务器 -->
    <node name="gripper_control_node" 
          pkg="gripper_control_handler" 
          type="gripper_control_node.py" 
          output="screen"
          respawn="true">
        
        <!-- 节点特定参数 -->
        <param name="status_publish_rate" value="10.0" />
        <param name="default_timeout" value="30.0" />
        
        <!-- 注意：不需要额外的状态话题，Action Feedback提供所有状态信息 -->
        
    </node>
    
    <!-- 可选：启动状态监控节点 -->
    <!-- 
    <node name="gripper_status_monitor" 
          pkg="gripper_control_handler" 
          type="gripper_status_monitor.py" 
          output="screen">
    </node>
    -->
    
</launch>
